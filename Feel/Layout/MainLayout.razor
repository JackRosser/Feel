@using Feel.Components.Assistant
@inherits LayoutComponentBase

@if (MainTheme is not null)
{
    <CascadingValue Value="MainTheme" Name="MainTheme">
        <CascadingValue Value="Assistente" Name="Assistente">
            <div class="global-modal-container">
            </div>
            <Assistente />
            <main class="@($"bg-{MainTheme}-feel-main-bg")">
                <div class="main-gradient" />
                <div class="main-content">
                    <section class="main-section">
                        @Body
                    </section>
                </div>
            </main>            
        </CascadingValue>
    </CascadingValue>
}
