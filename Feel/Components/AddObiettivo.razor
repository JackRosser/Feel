@inherits MainClassBase

    @if(EditModel.CreateObiettivoForm is not null)
    {       
<FormLayout Model="@EditModel.CreateObiettivoForm" OnSubmit="Save">
        <FormText LabelTitle="@Localizer[ResourceLanguage.Obiettivo]"
                  Placeholder="@Localizer[ResourceLanguage.PlaceholderObiettivo]"
                  @bind-Value="EditModel.CreateObiettivoForm.Titolo" />
        
            <EnumSelector LabelTitle="@Localizer[ResourceLanguage.Categoria]"
                      @bind-Value="EditModel.CreateObiettivoForm.Categoria" TEnum="Category?">                   
            </EnumSelector>

            <FormText LabelTitle="@Localizer[ResourceLanguage.Descrizione]"
                      Placeholder="@Localizer[ResourceLanguage.PlaceholderDescrizione]"
                      @bind-Value="EditModel.CreateObiettivoForm.Descrizione">
            </FormText>

            <FormDate LabelTitle="@Localizer[ResourceLanguage.Scadenza]"
                      @bind-Value="EditModel.CreateObiettivoForm.Scadenza">
            </FormDate>

            <FormNumberInteger LabelTitle="@Localizer[ResourceLanguage.Target]"
                      Placeholder="@Localizer[ResourceLanguage.PlaceholderTarget]"
                      @bind-Value="EditModel.CreateObiettivoForm.Target" Info="@Localizer[ResourceLanguage.InfoTarget]">
            </FormNumberInteger>

            <FormCheck LabelTitle="@Localizer[ResourceLanguage.CheckPeriodico]"
                      @bind-Value="EditModel.CreateObiettivoForm.CheckMark" Info="@Localizer[ResourceLanguage.InfoCheck]">
            </FormCheck>
</FormLayout>   
    }

