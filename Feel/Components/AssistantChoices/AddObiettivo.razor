@inherits MainClassBase

    @if(CreateObiettivo is not null)
    {       
<FormLayout CreateModel="@CreateObiettivo" OnSubmit="Save">
        <FormText LabelTitle="@Localizer[ResourceLanguage.Obiettivo]"
                  Placeholder="@Localizer[ResourceLanguage.PlaceholderObiettivo]"
                  @bind-Value="CreateObiettivo.Titolo" />
        
            <EnumSelector LabelTitle="@Localizer[ResourceLanguage.Categoria]"
                      @bind-Value="CreateObiettivo.Categoria" TEnum="Category?">                   
            </EnumSelector>

            <FormText LabelTitle="@Localizer[ResourceLanguage.Descrizione]"
                      Placeholder="@Localizer[ResourceLanguage.PlaceholderDescrizione]"
                      @bind-Value="CreateObiettivo.Descrizione">
            </FormText>

            <FormDate LabelTitle="@Localizer[ResourceLanguage.Scadenza]"
                      @bind-Value="CreateObiettivo.Scadenza">
            </FormDate>

            <FormNumberInteger LabelTitle="@Localizer[ResourceLanguage.Target]"
                      Placeholder="@Localizer[ResourceLanguage.PlaceholderTarget]"
                           @bind-Value="CreateObiettivo.Target" Info="@((MarkupString)Localizer[ResourceLanguage.InfoTarget].Value)">
            </FormNumberInteger>

            <FormRadio LabelTitle="@Localizer[ResourceLanguage.CheckPeriodico]"
                   @bind-Value="CreateObiettivo.CheckMark" Info="@((MarkupString)Localizer[ResourceLanguage.InfoCheck].Value)">
            </FormRadio>
</FormLayout>   
    }